{
  "manifest_version": 3,
  "name": "SwiftGuardian",
  "version": "1.0",
  "description": "Analyzes webpages for potential scams.",
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "chatbot-interceptor.js", "lib/llm-manager.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
